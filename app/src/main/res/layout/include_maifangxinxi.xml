<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/llMfxx"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="6dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="8dp"
            android:padding="12dp"
            android:text="卖方信息"
            android:textColor="@color/color_message"
            android:textSize="12sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_homepage_line" />
        <LinearLayout
            android:paddingLeft="12dp"
            android:id="@+id/llGongsi"
            android:paddingRight="12dp"
            android:paddingTop="14dp"
            android:paddingBottom="17dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvQiyeName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textColor="@color/color_homepage_quanbu"
                    tools:text="北京友融科技有限公司"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="企业"
                    android:textColor="@color/white"
                    android:textSize="9sp"
                    android:layout_marginLeft="8dp"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:paddingTop="1dp"
                    android:paddingBottom="1dp"
                    android:background="@drawable/shape_project_details_xianshi_red_bg"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="主营范围"
                    android:textSize="12sp"
                    android:textColor="@color/color_project_detail_baozhang"/>
                <TextView
                    android:id="@+id/tvZyfw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="9dp"
                    tools:text="互联网"
                    android:textSize="12sp"
                    android:textColor="@color/color_homepage_quanbu"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="公司地址"
                    android:textSize="12sp"
                    android:textColor="@color/color_project_detail_baozhang"
                    android:id="@+id/textView2" />

                <TextView
                    android:id="@+id/tvGsAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="9dp"
                    tools:text="北京市海淀区天创科技大厦912"
                    android:textSize="12sp"
                    android:textColor="@color/color_homepage_quanbu"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/llGeren"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:visibility="gone"
            android:paddingTop="14dp"
            android:paddingBottom="17dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvGrName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textColor="@color/color_homepage_quanbu"
                    tools:text="李鹏博"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="个人"
                    android:textColor="@color/white"
                    android:textSize="9sp"
                    android:layout_marginLeft="8dp"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:paddingTop="1dp"
                    android:paddingBottom="1dp"
                    android:background="@drawable/shape_project_details_xianshi_red_bg"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="年龄"
                            android:textSize="12sp"
                            android:textColor="@color/color_project_detail_baozhang"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:singleLine="true"
                            tools:text="34岁"
                            android:textSize="12sp"
                            android:textColor="@color/color_homepage_quanbu"
                            android:id="@+id/tvAge" />
                    </LinearLayout>
                    <View
                        android:layout_width="0.5dp"
                        android:background="@color/color_homepage_line"
                        android:layout_height="match_parent"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="所在地"
                            android:textSize="12sp"
                            android:textColor="@color/color_project_detail_baozhang"/>
                        <TextView
                            android:id="@+id/tvGrAddress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            tools:text="河北.唐山"
                            android:textSize="12sp"

                            android:singleLine="true"
                            android:textColor="@color/color_homepage_quanbu"/>
                    </LinearLayout>
                    <View
                        android:layout_width="0.5dp"
                        android:background="@color/color_homepage_line"
                        android:layout_height="match_parent"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="职业"
                            android:textSize="12sp"
                            android:textColor="@color/color_project_detail_baozhang"/>
                        <TextView
                            android:id="@+id/tvGrSyyz"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            tools:text="私营业主"
                            android:singleLine="true"
                            android:textSize="12sp"
                            android:textColor="@color/color_homepage_quanbu"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>