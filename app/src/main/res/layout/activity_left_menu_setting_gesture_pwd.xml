<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="11"
                android:textColor="@color/bottom_bar_icon_gray"
                android:textSize="45dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvMonth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="Jan"
                android:textColor="@color/bottom_bar_icon_gray"
                android:textSize="16dp"
                android:textStyle="bold" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="轻松理财，人人都是投资人。"
            android:textColor="@color/bottom_bar_icon_gray"
            android:textSize="@dimen/activity_word_text_14" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:src="@drawable/img_a_tx" />

            <LinearLayout
                android:id="@+id/gesture_pwd_iv_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/setting_gesture_pwd_spacing_medium"
                    android:divider="@drawable/setting_gesture_pwd_spacing_medium"
                    android:orientation="horizontal"
                    android:showDividers="middle">

                    <ImageView
                        android:id="@+id/gesture_pwd_iv0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/gesture_pwd_round_white" />

                    <ImageView
                        android:id="@+id/gesture_pwd_iv1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/gesture_pwd_round_white" />

                    <ImageView
                        android:id="@+id/gesture_pwd_iv2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/gesture_pwd_round_white" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/setting_gesture_pwd_spacing_medium"
                    android:divider="@drawable/setting_gesture_pwd_spacing_medium"
                    android:orientation="horizontal"
                    android:showDividers="middle">

                    <ImageView
                        android:id="@+id/gesture_pwd_iv3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/gesture_pwd_round_white" />

                    <ImageView
                        android:id="@+id/gesture_pwd_iv4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/gesture_pwd_round_white" />

                    <ImageView
                        android:id="@+id/gesture_pwd_iv5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/gesture_pwd_round_white" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/setting_gesture_pwd_spacing_medium"
                    android:divider="@drawable/setting_gesture_pwd_spacing_medium"
                    android:orientation="horizontal"
                    android:showDividers="middle">

                    <ImageView
                        android:id="@+id/gesture_pwd_iv6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/gesture_pwd_round_white" />

                    <ImageView
                        android:id="@+id/gesture_pwd_iv7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/gesture_pwd_round_white" />

                    <ImageView
                        android:id="@+id/gesture_pwd_iv8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/gesture_pwd_round_white" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/setting_gesture_pwd_tips_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="@string/setting_gesture_pwd_drawing"
                android:textColor="@color/setting_gesture_pwd_ring_internal_selected"
                android:textSize="@dimen/activity_word_text_14" />

            <com.nongjinsuo.mimijinfu.widget.GesturePwdView
                android:id="@+id/setting_gesture_pwd_gesture_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/setting_gesture_pwd_forget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="@string/setting_gesture_pwd_forget"
            android:textColor="@color/color_about" />
    </LinearLayout>
</RelativeLayout>
