<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivStatusBar"
            android:layout_width="fill_parent"
            android:layout_height="15dp"
            android:background="@color/white" />

        <RadioGroup
            android:id="@+id/rlTitleBar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/titlebar_height"
            android:background="@color/titlebar_color"
            android:gravity="center"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rbP2PProject"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/titlebar_height"
                android:layout_marginRight="30dp"
                android:gravity="center"
                android:button="@null"
                android:textStyle="bold"
                android:background="@color/white"
                android:text="定投宝"
                android:checked="true"
                android:textColor="@color/rb_p2p_project_selector"
                android:textSize="@dimen/titleba_title_fontsize" />

            <RadioButton
                android:id="@+id/rbZcProject"
                android:layout_width="wrap_content"
                android:background="@color/white"
                android:layout_height="@dimen/titlebar_height"
                android:button="@null"
                android:layout_marginLeft="30dp"
                android:gravity="center"
                android:textStyle="bold"
                android:text="活投宝"
                android:textColor="@color/rb_p2p_project_selector"
                android:textSize="@dimen/titleba_title_fontsize" />

        </RadioGroup>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/titlebar_line" />

    </LinearLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>