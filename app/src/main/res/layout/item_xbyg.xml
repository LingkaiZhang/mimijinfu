<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:paddingLeft="12dp"
    android:paddingRight="12dp">


    <include layout="@layout/include_hotsale_view" />

    <LinearLayout
        android:id="@+id/llView"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvZcjeMoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="120万"
                android:textColor="@color/color_item_progect_name"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/tvFundIntro1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="2dp"
                android:singleLine="true"
                android:text="募集金额"
                android:textColor="@color/color_hot_sale_gray"
                android:textSize="12sp" />

        </LinearLayout>

        <View
            android:layout_width="0.5dp"
            android:layout_height="30dp"
            android:background="@color/color_hot_sale_line" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvFundNh2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--:--:--"
                android:textColor="@color/color_hot_sale_red"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tvFundIntro2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="2dp"
                android:singleLine="true"
                android:text="发布倒计时"
                android:textColor="@color/color_hot_sale_gray"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>