<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llFundingRecordTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
       >

        <TextView
            android:id="@+id/tvZhk"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="总回款：0.0万"
            android:textColor="@color/color_homepage_quanbu"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tvHkfs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="回款方式：等额本息"
            android:textColor="@color/color_homepage_quanbu"
            android:textSize="13sp" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:dividerHeight="8dp"
            android:divider="@android:color/transparent"></ListView>

        <include
            layout="@layout/include_nodata"
            android:visibility="gone" />
    </RelativeLayout>
</LinearLayout>