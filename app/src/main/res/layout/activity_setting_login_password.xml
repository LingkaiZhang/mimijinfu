<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@android:color/white"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_height="wrap_content"
            android:text="登录密码"/>

        <com.nongjinsuo.mimijinfu.widget.MyEditText
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:background="@null"
            android:layout_height="match_parent"
            android:singleLine="true"
            android:maxLength="16"
            android:password="true"
            android:digits="1234567890abcdefjhigklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:id="@+id/etPwd" />

        <CheckBox
            android:id="@+id/cbShowPwd"
            android:layout_width="wrap_content"
            android:padding="6dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="16dp"
            android:button="@drawable/setloginpassword_selector"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/color_set_pwd"
        android:layout_marginLeft="16dp"
        android:textSize="10sp"
        android:layout_marginTop="6dp"
        android:text="密码应同时包含数字和字母(不支持其他字符),长度为8-16位"/>

    <TextView
        android:id="@+id/tvConfirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:gravity="center"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:padding="8dp"
        android:textColor="@android:color/white"
        android:background="@drawable/shape_hot_sale_detail_btn_bg"
        android:text="确定" />
</LinearLayout>