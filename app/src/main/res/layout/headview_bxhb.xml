<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/llSelectBsy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingLeft="32dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:background="@color/white"
        android:paddingRight="32dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/color_212121"
            android:text="不使用红包"/>
        <ImageView
            android:id="@+id/ivBsyhb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_yxza"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tvKyhbNum"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="@color/color_6b6b6b"
            android:textSize="12sp"
            android:text="有0个红包可用"/>
        <TextView
            android:id="@+id/tvHbsm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_212121"
            android:textSize="12sp"
            android:drawablePadding="5dp"
            android:drawableLeft="@drawable/icon_yy"
            android:text="红包说明"/>
    </LinearLayout>

</LinearLayout>