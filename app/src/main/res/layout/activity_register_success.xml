<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@drawable/img_bj"
    android:layout_height="match_parent">
    <ImageButton
        android:id="@+id/ibBack"
        android:layout_width="?actionBarSize"
        android:layout_height="?actionBarSize"
        android:layout_alignParentRight="true"
        android:background="@null"
        android:layout_marginTop="15dp"
        android:src="@drawable/img_zxx" />

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="98dp"
        android:src="@drawable/img_zccg"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="注册成功"
        android:layout_marginTop="50dp"
        android:textColor="#FFFEFE"
        android:textSize="28sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="红包已到帐"
        android:visibility="gone"
        android:layout_marginTop="14dp"
        android:textColor="#FFC6C6"
        android:textSize="14sp"/>
    <TextView
        android:id="@+id/tvKaiTong"
        android:layout_width="match_parent"
        android:text="开通新浪存管账户"
        android:textColor="#fb4a4a"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:gravity="center"
        android:textSize="14sp"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:background="@drawable/shape_katognxlcgzh_btn"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tvZhiyin"
        android:layout_width="wrap_content"
        android:text="新手指引"
        android:textColor="#FFC6C6"
        android:textSize="14sp"
        android:layout_marginTop="15dp"
        android:drawablePadding="5dp"
        android:drawableRight="@drawable/img_xszy"
        android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>